@model Player
@{
    ViewData["Title"] = "Изменение игрока";
}

<header>Изменение игрока</header>

<form method="post" asp-controller="ChangePlayer" asp-action="UpdatePlayer">

    <input type="hidden" asp-for="Id" />

    <label asp-for="Name"></label>
    <input asp-for="Name" />

    <label asp-for="Surname"></label>
    <input asp-for="Surname" />

    <label asp-for="TeamName"></label>
    <input asp-for="TeamName" list="teamOptions" id="comboInput" placeholder="Выберите из списка или введите своё значение...">
    <datalist id="teamOptions">
        @foreach (var teamName in ViewBag.TeamNames)
        {
            <option value="@teamName"></option>
        }
    </datalist>

    <label asp-for="Gender"></label>
    <select asp-for="Gender">
        <option value="Man">Man</option>
        <option value="Woman">Woman</option>
    </select>

    <label asp-for="DateOfBirth"></label>
    <input asp-for="DateOfBirth" type="date" />

    <label asp-for="Country"></label>
    <select asp-for="Country">
        <option value="Russia">Russia</option>
        <option value="USA">USA</option>
        <option value="Italy">Italy</option>
    </select>


    <input type="submit" value="Изменить" />

</form>